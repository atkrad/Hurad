{
    "name": "hurad/hurad",
    "description": "Hurad is web software you can use to create a beautiful blog.",
    "keywords": ["cakephp", "blog"],
    "version": "0.1.0-alpha.7",
    "homepage": "http://hurad.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Abdoli Rad",
            "email": "m.abdolirad@gmail.com",
            "homepage": "http://magzilla.org",
            "role": "Author"
        }
    ],
    "support": {
        "issues": "https://github.com/hurad/hurad/issues",
        "source": "https://github.com/hurad/hurad"
    },
    "repositories": [
        {
            "type": "pear",
            "url": "http://pear.cakephp.org"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "pear-cakephp/cakephp": ">=2.4.0",
        "cakedc/utils": ">=1.3",
        "hurad/hello-world": ">=0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "cakephp/debug_kit": "2.2.*"
    },
    "config": {
        "vendor-dir": "Vendor/"
    },
    "scripts": {
        "post-install-cmd": [
            "chmod -R 777 tmp/"
        ]
    }
}